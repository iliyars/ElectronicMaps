<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    <!-- Background Colors -->
    <SolidColorBrush x:Key="WindowBackground"
                     Color="#1E1E1E" />
    <SolidColorBrush x:Key="PanelBackground"
                     Color="#252526" />

    <!-- Accent Color -->
    <SolidColorBrush x:Key="AccentBrush"
                     Color="#0078D4" />
    <SolidColorBrush x:Key="AccentHoverBrush"
                     Color="#1084D8" />

    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackground"
                     Color="#3E3E42" />
    <SolidColorBrush x:Key="ButtonForeground"
                     Color="#E0E0E0" />
    <SolidColorBrush x:Key="ButtonBorder"
                     Color="#5A5A5D" />
    <SolidColorBrush x:Key="ButtonBackgroundHover"
                     Color="#4E4E52" />
    <SolidColorBrush x:Key="ButtonBackgroundPressed"
                     Color="#2E2E32" />

    <!-- TextBox Colors -->
    <SolidColorBrush x:Key="TextBoxBackground"
                     Color="#3E3E42" />
    <SolidColorBrush x:Key="TextBoxForeground"
                     Color="#E0E0E0" />
    <SolidColorBrush x:Key="TextBoxBorder"
                     Color="#5A5A5D" />
    <SolidColorBrush x:Key="TextBoxBorderHover"
                     Color="#6A6A6D" />

    <!-- ComboBox Colors -->
    <SolidColorBrush x:Key="ComboBoxBackground"
                     Color="#3E3E42" />
    <SolidColorBrush x:Key="ComboBoxForeground"
                     Color="#E0E0E0" />
    <SolidColorBrush x:Key="ComboBoxBorder"
                     Color="#5A5A5D" />
    <SolidColorBrush x:Key="ComboBoxBorderHover"
                     Color="#6A6A6D" />

    <!-- Popup Colors -->
    <SolidColorBrush x:Key="PopupBackground"
                     Color="#2D2D30" />
    <SolidColorBrush x:Key="PopupBorder"
                     Color="#5A5A5D" />

    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridBackground"
                     Color="#252526" />
    <SolidColorBrush x:Key="DataGridForeground"
                     Color="#E0E0E0" />
    <SolidColorBrush x:Key="DataGridBorder"
                     Color="#3E3E42" />
    <SolidColorBrush x:Key="DataGridAlternateRowBackground"
                     Color="#2A2A2D" />
    <SolidColorBrush x:Key="DataGridHeaderBackground"
                     Color="#2D2D30" />
    <SolidColorBrush x:Key="DataGridHeaderForeground"
                     Color="#E0E0E0" />
    <SolidColorBrush x:Key="DataGridRowHoverBackground"
                     Color="#3E3E42" />
    <SolidColorBrush x:Key="DataGridRowSelectedBackground"
                     Color="#094771" />

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary"
                     Color="#E0E0E0" />
    <SolidColorBrush x:Key="TextSecondary"
                     Color="#A0A0A0" />


    <!-- ========== ЕДИНАЯ ЦВЕТОВАЯ СХЕМА ДЛЯ ВСЕХ КАРТОЧЕК ========== -->

    <!-- Фон карточек (одинаковый для всех типов) -->
    <SolidColorBrush x:Key="CardBackground"
                     Color="#2D2D30"
                     PresentationOptions:Freeze="True" />

    <SolidColorBrush x:Key="CardBackgroundHover"
                     Color="#3E3E42"
                     PresentationOptions:Freeze="True" />

    <!-- Рамка карточек (одинаковая для Component и Family) -->
    <SolidColorBrush x:Key="CardBorder"
                     Color="#3F3F46"
                     PresentationOptions:Freeze="True" />

    <SolidColorBrush x:Key="CardBorderHover"
                     Color="#007ACC"
                     PresentationOptions:Freeze="True" />

    <!-- ========== ЦВЕТА ДЛЯ UNDEFINED (единственное отличие) ========== -->

    <!-- Рамка для Undefined карточек (оранжевая, но приглушённая) -->
    <SolidColorBrush x:Key="WarningBorder"
                     Color="#6B5D42"
                     PresentationOptions:Freeze="True" />

    <SolidColorBrush x:Key="WarningBorderHover"
                     Color="#D4A574"
                     PresentationOptions:Freeze="True" />

    <SolidColorBrush x:Key="WarningText"
                     Color="#D4A574"
                     PresentationOptions:Freeze="True" />

    





</ResourceDictionary>