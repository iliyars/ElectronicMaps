<Window x:Class="ElectronicMaps.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectronicMaps.WPF"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ElectronicMaps"
        Height="720"
        Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />            <!-- toolbar -->
            <RowDefinition Height="*" />            <!-- main area -->
            <RowDefinition Height="Auto" />            <!-- statusbar -->
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0">
            <Button Content="Open XML"
                    Command="{Binding OpenXmlCommand}" />
            <Button Content="Save Project"
                    Command="{Binding SaveProjectCommand}" />
            <ToggleButton IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"
                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                          VerticalAlignment="Center"
                          Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal"
                            Margin="4,0">
                    <materialDesign:PackIcon Kind="WeatherSunny"
                                             Width="18"
                                             Height="18"
                                             Margin="0,0,4,0" />
                    <TextBlock Text="Тёмная тема"
                               VerticalAlignment="Center" />
                    
                </StackPanel>
            </ToggleButton>


            <Separator />
            <Button Content="Generate Selected"
                    Command="{Binding GenerateSelectedCommand}" />
            <TextBlock Text="{Binding ProjectSummary}"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center" />
            <TextBlock Text="{Binding CurrentScreenText}"
                       Margin="0,0,0,8"
                       FontWeight="Bold"
                       Foreground="Red" />
        </ToolBar>


        <!-- Main area: left nav | content | details (collapsed by default) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180" />
                <!-- left nav -->
                <ColumnDefinition Width="*" />
                <!-- content -->
                <ColumnDefinition Width="0"
                                  x:Name="DetailsColumn" />
                <!-- details -->
            </Grid.ColumnDefinitions>

            <!-- Left navigation -->
            <StackPanel Grid.Column="0"
                        Background="#F4F4F6">
                <ListBox ItemsSource="{Binding NavigationItems}"
                         SelectedItem="{Binding SelectedNav}"
                         Margin="6">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        Margin="6">
                                <TextBlock Text="{Binding}"
                                           FontWeight="SemiBold" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <!-- Content area: ContentControl показывает текущую страницу (ViewModel -> View mapping) -->
            <ContentControl Grid.Column="1"
                            Content="{Binding CurrentScreen, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Right details (slide-in). Visibility bound to IsDetailsOpen -->
            <Border Grid.Column="2"
                    Background="WhiteSmoke"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    Padding="8"
                    Visibility="{Binding IsDetailsOpen, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ContentControl Content="{Binding DetailViewModel}" />
            </Border>
        </Grid>
        
        <!-- Status bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding CurrentUser}" />
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
