<UserControl x:Class="ElectronicMaps.WPF.Views.WorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectronicMaps.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="DataGridRowHeader"
               BasedOn="{StaticResource {x:Type DataGridRowHeader}}">
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Padding"
                    Value="5" />
            <Setter Property="Width"
                    Value="35" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- локальный тулбар -->
            <RowDefinition Height="*" />
            <!-- контент -->
        </Grid.RowDefinitions>

        <!-- Локальный тулбар Workspace -->
        <ToolBar Grid.Row="0">
            <TextBlock Text="Components workspace"
                       FontWeight="Bold"
                       Margin="0,0,16,0" />

            <TextBlock Text="Всего:"
                       Margin="8,0,4,0" />
            <TextBlock Text="{Binding Components.Count}" />

            <Separator />

            <!-- Тут потом можно добавить фильтр, сортировку, кнопки и т.д. -->
        </ToolBar>

        <!-- Основная область: таблица + детали -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Таблица компонентов -->
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding Components}"
                      SelectedItem="{Binding SelectedComponent, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Margin="4"
                      HeadersVisibility="Column,Row"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      LoadingRow="AllComponentsGrid_LoadingRow">
                <!-- Подгони имена столбцов под свой DTO -->
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Тип"
                                            Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Type}"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"
                                           Padding="4" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Имя"
                                        Binding="{Binding CleanName}"
                                        Width="2*" />
                    <DataGridTextColumn Header="Кол-во"
                                        Binding="{Binding Quantity}"
                                        Width="*" />
                    <DataGridTextColumn Header="Поз. номер"
                                        Binding="{Binding Designators}"
                                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Панель деталей выбранного компонента -->
            <Border Grid.Column="1"
                    Margin="4"
                    Padding="8"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Детали компонента"
                               FontWeight="Bold"
                               FontSize="14" />

                    <StackPanel Grid.Row="1"
                                Margin="0,8,0,0">
                        <TextBlock Text="Имя:"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedComponent.CleanName}"
                                   Margin="0,0,0,4" />

                        <TextBlock Text="Оригинальное имя:"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedComponent.OriginalName}"
                                   Margin="0,0,0,4" />

                        <TextBlock Text="Тип:"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedComponent.Type}"
                                   Margin="0,0,0,4" />

                        <TextBlock Text="Корпус:"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedComponent.Package}"
                                   Margin="0,0,0,4" />

                        <TextBlock Text="Номинал:"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedComponent.Value}"
                                   Margin="0,0,0,4" />

                        <TextBlock Text="Последнее изменение:"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="{Binding SelectedComponent.LastUpdatedUtc}"
                                   Margin="0,0,0,4" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
