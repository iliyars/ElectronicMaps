<UserControl x:Class="ElectronicMaps.WPF.Views.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ElectronicMaps.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900">

    <Grid Margin="40,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- пустота слева, как в VS Code -->
            <ColumnDefinition Width="2.2*" />
            <!-- центральный блок -->
            <ColumnDefinition Width="2.2*" />
            <!-- правая колонка под будущее -->
            <ColumnDefinition Width="*" />
            <!-- пустота справа -->
        </Grid.ColumnDefinitions>

        <!-- ЦЕНТРАЛЬНЫЙ ЛЕВЫЙ БЛОК (аналог VS Code) -->
        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Width="360">

            <!-- Заголовок приложения -->
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="ElectronicMaps"/>
                <TextBlock Text="Формы для электронных карт"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- START -->
            <StackPanel>
                <TextBlock Text="Start"
                           Margin="0,0,0,8"/>

                <!-- Открыть XML -->
                <Button Command="{Binding OpenXmlCommand}"
                        
                        HorizontalContentAlignment="Left"
                        Padding="0"
                        Margin="0,2,0,2">
                    <StackPanel Orientation="Horizontal">
                        
                        <TextBlock Text="Open XML..."/>
                    </StackPanel>
                </Button>

                <!-- Открыть Word -->
                <Button Command="{Binding OpenWordCommand}"
                        
                        HorizontalContentAlignment="Left"
                        Padding="0"
                        Margin="0,2,0,2">
                    <StackPanel Orientation="Horizontal">
                        
                        <TextBlock Text="Open Word..."/>
                    </StackPanel>
                </Button>

                <!-- Открыть проект -->
                <Button Command="{Binding OpenProjectCommand}"
                        
                        HorizontalContentAlignment="Left"
                        Padding="0"
                        Margin="0,2,0,2">
                    <StackPanel Orientation="Horizontal">
                        
                        <TextBlock Text="Open project..."/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- RECENT (можно позже заполнить) -->
            <StackPanel Margin="0,32,0,0">
                <TextBlock Text="Recent"
                           Margin="0,0,0,8"/>

                <!-- Пока просто заглушка -->
                <TextBlock Text="Здесь появятся последние проекты и файлы."/>
            </StackPanel>
        </StackPanel>

        <!-- ПРАВАЯ КОЛОНКА ПОД «Walkthroughs» / помощь (можно заполнить позже) -->
        <StackPanel Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Width="380">
            <TextBlock Text="Walkthroughs"
                       Margin="0,0,0,8"/>

            <Border 
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,6"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Импорт XML и обзор компонентов"/>
                    <TextBlock Text="Узнайте, как загрузить данные и начать работать с компонентами."
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <Border 
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,6"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Создание Word-форм"/>
                    <TextBlock Text="Шаги для генерации форм по выбранным компонентам."
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
