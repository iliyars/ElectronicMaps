<UserControl x:Class="ElectronicMaps.WPF.Features.Workspace.Views.Parameters.ParametersEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectronicMaps.WPF.Features.Workspace.Views.Parameters"
             xmlns:converters="clr-namespace:ElectronicMaps.WPF.Helpers.Converters"
             xmlns:vm="clr-namespace:ElectronicMaps.WPF.Features.Workspace.ViewModels.Parameters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:EnumEqualsToVisibilityConverter x:Key="EnumEqualsToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <DataTemplate DataType="{x:Type vm:ParameterValueRowViewModel}">
            <Grid Margin="0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                
                <!-- Название параметра -->
                <TextBlock Grid.Column="0"
                           Text="{Binding DisplayName}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap" />
                <!-- Ввод значения -->
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="140" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <TextBox    Text="{Binding StringValue,
                                    UpdateSourceTrigger=PropertyChanged, TargetNullValue='', ValidatesOnExceptions=True,NotifyOnValidationError=True}"
                                    Visibility="{Binding Kind, Converter={StaticResource EnumToVis}, ConverterParameter=String}"
                                    MinWidth="180" />

                        <TextBlock  Text="{Binding IntValue,
                                    UpdateSourceTrigger=PropertyChanged, TargetNullValue='', ValidatesOnExceptions=True, NotifyOnValidationError=True}"
                                    Visibility="{Binding Kind, Converter={StaticResource EnumEqualsToVisibilityConverter}, ConverterParameter=Int}"
                                    MinWidth="180"/>

                        <TextBlock  Text="{Binding DoubleValue,
                                    UpdateSourceTrigger=PropertyChanged, TargetNullValue='', ValidatesOnExceptions=True, NotifyOnValidationError=True}"
                                    Visibility="{Binding Kind, Converter={StaticResource EnumEqualsToVisibilityConverter}, ConverterParameter=Double}"
                                    MinWidth="180" />
                    </Grid>

                    <DockPanel Grid.Column="1"
                               Visibility="{Binding HasPins, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Margin="8 0 0 0"
                               LastChildFill="True">
                        <TextBlock Text="Pins"
                                   VerticalAlignment="Center"
                                   Opacity="0.7"
                                   Margin="0 0 6 0" />
                        <TextBox Text="{Binding Pins, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Номера контактов"
                                 MinWidth="80" />
                    </DockPanel>
                </Grid>

                <TextBlock Grid.Column="2"
                           Text="{Binding Unit}"
                           VerticalAlignment="Center"
                           Opacity="0.7" />
            </Grid>
        </DataTemplate>
        
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding Rows}" />
    </ScrollViewer>
</UserControl>
