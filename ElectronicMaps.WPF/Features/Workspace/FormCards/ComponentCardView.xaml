<UserControl x:Class="ElectronicMaps.WPF.Features.Workspace.FormCards.ComponentCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectronicMaps.WPF.Features.Workspace.FormCards"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Единый стиль для всех карточек -->
    <Border Background="{DynamicResource CardBackground}"
            BorderBrush="{DynamicResource CardBorder}"
            BorderThickness="1"
            CornerRadius="6"
            Padding="16,12">

        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver"
                             Value="True">
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource CardBorderHover}" />
                        <Setter Property="Background"
                                Value="{DynamicResource CardBackgroundHover}" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!-- Номер -->
                <ColumnDefinition Width="*" />
                <!-- Информация -->
                <ColumnDefinition Width="Auto" />
                <!-- Количество -->
            </Grid.ColumnDefinitions>

            <!-- Номер (минималистично) -->
            <TextBlock Grid.Column="0"
                       Text="{Binding Number}"
                       FontSize="13"
                       Foreground="{DynamicResource TextTertiary}"
                       VerticalAlignment="Center"
                       Margin="0,0,16,0"
                       MinWidth="24" />

            <!-- Основная информация -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="0,0,16,0">

                <!-- Название -->
                <TextBlock Text="{Binding Name}"
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="{DynamicResource TextPrimary}"
                           TextTrimming="CharacterEllipsis"
                           ToolTip="{Binding Name}" />

                <!-- Позиционные обозначения -->
                <TextBlock Margin="0,2,0,0"
                           FontSize="12"
                           Foreground="{DynamicResource TextSecondary}"
                           TextTrimming="CharacterEllipsis">
                    <Run Text="{Binding Designators, Mode=OneWay}" />
                </TextBlock>
            </StackPanel>

            <!-- Количество (минималистично) -->
            <TextBlock Grid.Column="2"
                       VerticalAlignment="Center"
                       FontSize="13"
                       Foreground="{DynamicResource TextSecondary}">
                <Run Text="{Binding Quantity, Mode=OneWay}"
                     FontWeight="Medium"
                     Foreground="{DynamicResource TextPrimary}" />
                <Run Text=" шт." />
            </TextBlock>
        </Grid>
    </Border>
</UserControl>
