<UserControl x:Class="ElectronicMaps.WPF.Features.Workspace.WorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectronicMaps.WPF.Features.Workspace"
             xmlns:formCards="clr-namespace:ElectronicMaps.WPF.Features.Workspace.FormCards"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type formCards:ComponentCardViewModel}">
            <formCards:ComponentCardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type formCards:FamilyCardsViewModel}">
            <formCards:FamilyCardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type formCards:UndefinedCardViewModel}">
            <formCards:UndefinedCardView />
        </DataTemplate>

        <!-- Анимация появления боковой панели -->
        <Storyboard x:Key="ShowDetailsPanel">
            <DoubleAnimation Storyboard.TargetName="DetailsTranslate"
                             Storyboard.TargetProperty="X"
                             To="0"
                             Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="DetailsPanel"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.25">
            </DoubleAnimation>
        </Storyboard>

        <!-- Анимация скрытия боковой панели -->
        <Storyboard x:Key="HideDetailsPanel">
            <DoubleAnimation Storyboard.TargetName="DetailsTranslate"
                             Storyboard.TargetProperty="X"
                             To="450"
                             Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation Storyboard.TargetName="DetailsPanel"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0"
                             Duration="0:0:0.2" />
        </Storyboard>
        
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="420" />
            <!-- ширина панели деталей -->
        </Grid.ColumnDefinitions>

        <!-- Top bar -->
        <Border Grid.Row="0"
                Grid.ColumnSpan="2"
                Background="{DynamicResource PanelBackground}"
                BorderBrush="{DynamicResource DataGridBorder}"
                BorderThickness="0,0,0,1"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Выбор формы -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Форма компонентов"
                               Style="{StaticResource SectionHeaderStyle}" />
                    <ComboBox ItemsSource="{Binding ViewOptions}"
                              SelectedItem="{Binding SelectedViewOption, Mode=TwoWay}"
                              MinHeight="40">
                    </ComboBox>
                </StackPanel>
                
                <!-- Статистика -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="Компонентов: "
                               Foreground="{DynamicResource TextSecondary}"
                               FontSize="13"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{Binding ItemCards.Count}"
                               Style="{StaticResource CounterStyle}"
                               VerticalAlignment="Center"
                               Margin="4,0,0,0" /> 
                </StackPanel>

                <!-- Кнопки действий (опционально) -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                </StackPanel>
            </Grid>
        </Border>

        <!-- Cards area -->
        <ScrollViewer Grid.Row="1"
                Grid.Column="0"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled"
                Padding="24,20,12,20">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar"
                       BasedOn="{StaticResource MinimalScrollBar}" />
            </ScrollViewer.Resources>

            <!-- Список карточек -->
            <ItemsControl ItemsSource="{Binding ItemCards}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel  />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardContainerStyle}">
                            <ContentControl Content="{Binding}" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Empty state (когда нет карточек)-->
        <Border Grid.Row="1"
                Grid.Column="0"
                Background="Transparent"
                Visibility="{Binding ItemCards.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="📦"
                           Style="{StaticResource EmptyStateIcon}" />
                <TextBlock Text="Нет компонентов для отображения"
                           Style="{StaticResource EmptyStateText}"
                           FontWeight="SemiBold" />
                <TextBlock Text="Выберите другую форму или импортируйте данные"
                           Style="{StaticResource EmptyStateText}"
                           FontSize="13"
                           Margin="0,8,0,0"
                           Opacity="0.7" />
            </StackPanel>
        </Border>

        <!-- Details panel -->
        <Border x:Name="DetailsPanel"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1"
                Background="{DynamicResource PanelBackground}"
                BorderBrush="{DynamicResource DataGridBorder}"
                BorderThickness="1,0,0,0"
                Opacity="0"
                Panel.ZIndex="10">

            <Border.RenderTransform>
                <TranslateTransform x:Name="DetailsPanelTransform"
                                    X="420" />
            </Border.RenderTransform>

            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDetailsOpen}"
                                     Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource ShowDetailsPanel}" />
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource HideDetailsPanel}" />
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <!-- Details Content -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Details Header -->
                <Border Grid.Row="0"
                        Background="{DynamicResource PanelBackground}"
                        BorderBrush="{DynamicResource DataGridBorder}"
                        BorderThickness="0,0,0,1"
                        Padding="20,16">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Параметры компонента"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimary}" />
                            <TextBlock Text="Детальная информация"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,4,0,0" />
                        </StackPanel>

                        <!-- Close Button -->
                        <Button Grid.Column="1"
                                Content="✕"
                                Style="{StaticResource ClosePanelButton}"
                                Command="{Binding ToggleDetailsCommand}"
                                CommandParameter="{Binding OpenDetailsDraftId}" />
                    </Grid>
                </Border>

                <!-- Details Content Area -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Padding="20">

                    <StackPanel>
                        <!-- Placeholder для деталей -->
                        <TextBlock Text="Детали выбранного компонента будут отображаться здесь"
                                   Foreground="{DynamicResource TextSecondary}"
                                   FontSize="13"
                                   TextWrapping="Wrap"
                                   Margin="0,20,0,0" />

                        <!-- TODO: Заменить на реальный ContentControl -->
                        <!-- <ContentControl Content="{Binding SelectedCardDetails}" /> -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
