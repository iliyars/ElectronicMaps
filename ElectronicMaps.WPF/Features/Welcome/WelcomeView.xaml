<UserControl x:Class="ElectronicMaps.WPF.Features.Welcome.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectronicMaps.WPF.Features.Welcome"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="{DynamicResource AppBackgroundBrush}"
             d:DesignHeight="600"
             d:DesignWidth="900">
    <UserControl.Resources>
        <!-- Кнопка как ссылка в секции Start -->
        <Style x:Key="StartLinkButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource MaterialDesignFlatButton}">

            <!-- Базовые параметры -->
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="Margin"
                    Value="0,4,0,4" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Left" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Foreground"
                    Value="{DynamicResource AppAccentBrush}" />
            <Setter Property="FontWeight"
                    Value="Normal" />

            <!-- Убираем ripple-эффект (как в VS Code) -->
            

            <!-- Реакция на наведение -->
            <Style.Triggers>
                <!-- При наведении: меняется цвет + жирный текст -->
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Foreground"
                            Value="{DynamicResource AppAccentLightBrush}" />
                    <Setter Property="FontWeight"
                            Value="SemiBold" />
                </Trigger>

                <!-- При нажатии: меняется цвет (ещё чуть светлее) -->
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter Property="Foreground"
                            Value="{DynamicResource AppAccentDarkBrush}" />
                    <Setter Property="FontWeight"
                            Value="SemiBold" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="40,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- пустота слева, как в VS Code -->
            <ColumnDefinition Width="2.2*" />
            <!-- центральный блок -->
            <ColumnDefinition Width="2.2*" />
            <!-- правая колонка под будущее -->
            <ColumnDefinition Width="*" />
            <!-- пустота справа -->
        </Grid.ColumnDefinitions>

        <!-- ЦЕНТРАЛЬНЫЙ ЛЕВЫЙ БЛОК (аналог VS Code) -->
        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Width="360">

            <!-- Заголовок приложения -->
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="ElectronicMaps"
                           Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                           Foreground="{DynamicResource AppHeaderTextBrush}" />
                <TextBlock Text="Формы для электронных карт"
                           Margin="0,4,0,0"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           Foreground="{DynamicResource AppMutedTextBrush}" />
            </StackPanel>

            <!-- START -->
            <StackPanel>
                <TextBlock Text="Start"
                           Margin="0,0,0,8"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Foreground="{DynamicResource AppHeaderTextBrush}" />

                <!-- Открыть XML -->
                <Button Command="{Binding OpenXmlCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        HorizontalContentAlignment="Left"
                        Padding="0"
                        Margin="0,2,0,2">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileXmlBox"
                                                 Width="18"
                                                 Height="18"
                                                 Margin="0,0,8,0"
                                                 Foreground="{DynamicResource AppAccentBrush}" />
                        <TextBlock Text="Open XML..."
                                   Style="{StaticResource MaterialDesignBody1TextBlock}"
                                   Foreground="{DynamicResource AppBodyTextBrush}" />
                    </StackPanel>
                </Button>

                <!-- Открыть Word -->
                <Button Command="{Binding OpenWordCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        HorizontalContentAlignment="Left"
                        Padding="0"
                        Margin="0,2,0,2">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileWordBox"
                                                 Width="18"
                                                 Height="18"
                                                 Margin="0,0,8,0"
                                                 Foreground="{DynamicResource AppAccentBrush}" />
                        <TextBlock Text="Open Word..."
                                   Style="{StaticResource MaterialDesignBody1TextBlock}"
                                   Foreground="{DynamicResource AppBodyTextBrush}" />
                    </StackPanel>
                </Button>

                <!-- Открыть проект -->
                <Button Command="{Binding OpenProjectCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        HorizontalContentAlignment="Left"
                        Padding="0"
                        Margin="0,2,0,2">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FolderOpen"
                                                 Width="18"
                                                 Height="18"
                                                 Margin="0,0,8,0"
                                                 Foreground="{DynamicResource AppAccentBrush}" />
                        <TextBlock Text="Open project..."
                                   Style="{StaticResource MaterialDesignBody1TextBlock}"
                                   Foreground="{DynamicResource AppBodyTextBrush}" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- RECENT (можно позже заполнить) -->
            <StackPanel Margin="0,32,0,0">
                <TextBlock Text="Recent"
                           Margin="0,0,0,8"
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                           Foreground="{DynamicResource AppHeaderTextBrush}" />

                <!-- Пока просто заглушка -->
                <TextBlock Text="Здесь появятся последние проекты и файлы."
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           Foreground="{DynamicResource AppMutedTextBrush}" />
            </StackPanel>
        </StackPanel>

        <!-- ПРАВАЯ КОЛОНКА ПОД «Walkthroughs» / помощь (можно заполнить позже) -->
        <StackPanel Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Width="380">
            <TextBlock Text="Walkthroughs"
                       Margin="0,0,0,8"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="{DynamicResource AppHeaderTextBrush}" />

            <Border Background="{DynamicResource AppSurfaceBrush}"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,6"
                    BorderBrush="{DynamicResource AppBorderBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Импорт XML и обзор компонентов"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Foreground="{DynamicResource AppBodyTextBrush}" />
                    <TextBlock Text="Узнайте, как загрузить данные и начать работать с компонентами."
                               Margin="0,2,0,0"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Foreground="{DynamicResource AppMutedTextBrush}" />
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource AppSurfaceBrush}"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,6"
                    BorderBrush="{DynamicResource AppBorderBrush}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Создание Word-форм"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Foreground="{DynamicResource AppBodyTextBrush}" />
                    <TextBlock Text="Шаги для генерации форм по выбранным компонентам."
                               Margin="0,2,0,0"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Foreground="{DynamicResource AppMutedTextBrush}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
