<UserControl x:Class="ElectronicMaps.WPF.Features.Welcome.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900"
             Background="{DynamicResource WindowBackground}">

    <UserControl.Resources>
        <!-- Icon Paths -->
        <PathGeometry x:Key="DocumentIcon">M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z</PathGeometry>
        <PathGeometry x:Key="FileIcon">M13,9H18.5L13,3.5V9M6,2H14L20,8V20A2,2 0 0,1 18,22H6C4.89,22 4,21.1 4,20V4C4,2.89 4.89,2 6,2M15,18V16H6V18H15M18,14V12H6V14H18Z</PathGeometry>
        <PathGeometry x:Key="FolderIcon">M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z</PathGeometry>

        <!-- Welcome Link Button Style (как в VS Code) -->
        <Style x:Key="WelcomeLinkButton"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="Foreground"
                    Value="{DynamicResource AccentBrush}" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="0,6" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Left" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="{DynamicResource DataGridRowHoverBackground}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Foreground"
                            Value="{DynamicResource AccentHoverBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="11" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="Foreground"
                    Value="{DynamicResource TextSecondary}" />
            <Setter Property="Text"
                    Value="{Binding Text, RelativeSource={RelativeSource Self}}" />
            <Setter Property="Margin"
                    Value="0,0,0,10" />
        </Style>

        <!-- Walkthrough Card Style -->
        <Style x:Key="WalkthroughCard"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{DynamicResource PanelBackground}" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource DataGridBorder}" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="CornerRadius"
                    Value="6" />
            <Setter Property="Padding"
                    Value="14,12" />
            <Setter Property="Margin"
                    Value="0,0,0,10" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="{DynamicResource DataGridRowHoverBackground}" />
                    <Setter Property="BorderBrush"
                            Value="{DynamicResource AccentBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="60,40,60,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="420" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="380" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- LEFT SECTION -->
            <StackPanel Grid.Column="1">

                <!-- App Title -->
                <TextBlock Text="ElectronicMaps"
                           FontSize="28"
                           FontWeight="Light"
                           Foreground="{DynamicResource TextPrimary}"
                           Margin="0,0,0,4" />

                <TextBlock Text="Формы для электронных карт"
                           FontSize="13"
                           Foreground="{DynamicResource TextSecondary}"
                           Margin="0,0,0,48" />

                <!-- START Section -->
                <TextBlock Text="START"
                           Style="{StaticResource SectionHeader}" />

                <StackPanel>
                    <!-- Open XML -->
                    <Button Command="{Binding ImportXmlCommand}"
                            Style="{StaticResource WelcomeLinkButton}">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{DynamicResource AccentBrush}"
                                    Width="20"
                                    Height="20"
                                    CornerRadius="3"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center">
                                <Path Data="{StaticResource DocumentIcon}"
                                      Fill="White"
                                      Width="12"
                                      Height="12"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                            </Border>
                            <TextBlock Text="Open XML..."
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Open Word -->
                    <Button Command="{Binding OpenWordCommand}"
                            Style="{StaticResource WelcomeLinkButton}">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{DynamicResource AccentBrush}"
                                    Width="20"
                                    Height="20"
                                    CornerRadius="3"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center">
                                <Path Data="{StaticResource FileIcon}"
                                      Fill="White"
                                      Width="12"
                                      Height="12"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                            </Border>
                            <TextBlock Text="Open Word..."
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Open Project -->
                    <Button Command="{Binding OpenProjectCommand}"
                            Style="{StaticResource WelcomeLinkButton}">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{DynamicResource AccentBrush}"
                                    Width="20"
                                    Height="20"
                                    CornerRadius="3"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center">
                                <Path Data="{StaticResource FolderIcon}"
                                      Fill="White"
                                      Width="12"
                                      Height="12"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                            </Border>
                            <TextBlock Text="Open project..."
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- RECENT Section -->
                <TextBlock Text="RECENT"
                           Style="{StaticResource SectionHeader}"
                           Margin="0,32,0,10" />

                <TextBlock Text="No recent projects"
                           FontSize="13"
                           Foreground="{DynamicResource TextSecondary}"
                           FontStyle="Italic" />

            </StackPanel>

            <!-- RIGHT SECTION - Walkthroughs -->
            <StackPanel Grid.Column="3">

                <TextBlock Text="WALKTHROUGHS"
                           Style="{StaticResource SectionHeader}" />

                <!-- Card 1 -->
                <Border Style="{StaticResource WalkthroughCard}">
                    <StackPanel>
                        <TextBlock Text="📥 Импорт XML и обзор компонентов"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,6" />
                        <TextBlock Text="Узнайте, как загрузить данные и начать работать с компонентами."
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondary}"
                                   TextWrapping="Wrap"
                                   LineHeight="18" />
                    </StackPanel>
                </Border>

                <!-- Card 2 -->
                <Border Style="{StaticResource WalkthroughCard}">
                    <StackPanel>
                        <TextBlock Text="📋 Создание Word-форм"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,6" />
                        <TextBlock Text="Шаги для генерации форм по выбранным компонентам."
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondary}"
                                   TextWrapping="Wrap"
                                   LineHeight="18" />
                    </StackPanel>
                </Border>

                <!-- Card 3 -->
                <Border Style="{StaticResource WalkthroughCard}">
                    <StackPanel>
                        <TextBlock Text="⚡ Быстрый старт"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,6" />
                        <TextBlock Text="Основные возможности приложения за 5 минут."
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondary}"
                                   TextWrapping="Wrap"
                                   LineHeight="18" />
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>